<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    android:orientation="vertical">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/imgVDoctor4"
        android:layout_width="@dimen/_99sdp"
        android:layout_height="@dimen/_99sdp"
        android:layout_centerInParent="true"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/tree" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgVDoctor5"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:src="@drawable/_call_ic"
        app:civ_border_color="@color/grey"
        app:civ_border_width="@dimen/_10sdp" />

    <TextView
        android:id="@+id/tvSearchDoctor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:drawablePadding="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_below="@+id/imgVDoctor4"
        android:drawableTint="@color/app_color"
        android:drawableStart="@drawable/_call_ic"
        android:fontFamily="@font/montserrat_regular"
        android:text="Calling..."
        android:textAlignment="center"
        android:textColor="@color/app_color"
        android:textSize="22sp" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgVDoctor6"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_mobile_call"
        android:visibility="gone"
        app:civ_border_color="@color/grey"
        app:civ_border_width="@dimen/_2sdp" />

    <LinearLayout
        android:id="@+id/llCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:layout_marginBottom="@dimen/_40sdp"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:src="@drawable/_call_ic"
            android:padding="@dimen/_10sdp"
            android:tint="@color/red"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tvCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/montserrat_medium"
            android:text="CANCEL"
            android:textColor="@color/grey"
            android:textSize="18sp"
            android:visibility="gone" />

    </LinearLayout>


</RelativeLayout>