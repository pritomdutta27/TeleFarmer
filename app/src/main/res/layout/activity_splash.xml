<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_color"
    tools:context=".ui.view.activity.splash.SplashActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_app_icon"
        android:layout_width="wrap_content"
        android:layout_marginBottom="-50dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/img_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/app_icon_white" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_back"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_550sdp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/splash_bg" />


</androidx.constraintlayout.widget.ConstraintLayout>