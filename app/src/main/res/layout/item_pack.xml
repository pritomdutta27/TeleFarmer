<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/pack_background"
    app:cardCornerRadius="@dimen/_5sdp">

    <TextView
        android:id="@+id/tv_title_pack"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_15sdp"
        android:fontFamily="@font/montserrat_semi_bold"
        android:text="Basic"
        android:textColor="@color/app_color"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_pack_amount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_6sdp"
        android:fontFamily="@font/montserrat_semi_bold"
        android:text="৳20/month"
        android:textColor="@color/app_color"
        android:textSize="@dimen/_18ssp"
        app:layout_constraintEnd_toEndOf="@+id/tv_title_pack"
        app:layout_constraintStart_toStartOf="@+id/tv_title_pack"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_pack" />

    <TextView
        android:id="@+id/tv_package_details"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:fontFamily="@font/montserrat_semi_bold"
        android:paddingEnd="@dimen/_6sdp"
        android:textColor="@color/black"
        android:textSize="@dimen/_9ssp"
        app:layout_constraintEnd_toEndOf="@+id/tv_pack_amount"
        app:layout_constraintStart_toStartOf="@+id/tv_pack_amount"
        app:layout_constraintTop_toBottomOf="@+id/tv_pack_amount"
        android:text="• 15 Days \n• Unlimited Watch \n• High Resolation" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="0dp"
        android:layout_height="@dimen/_26sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:background="@drawable/pack_background"
        android:backgroundTint="@color/app_color"
        android:fontFamily="@font/montserrat_medium"
        android:text="@string/buy_now"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tv_package_details"
        app:layout_constraintStart_toStartOf="@+id/tv_package_details"
        app:layout_constraintTop_toBottomOf="@+id/tv_package_details" />

</androidx.constraintlayout.widget.ConstraintLayout>